generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(uuid())
  name        String
  description String
  link        String
  image       String
  createdAt   DateTime  @default(now())
  modifiedAt  DateTime  @updatedAt
  Product     Product[]
}

