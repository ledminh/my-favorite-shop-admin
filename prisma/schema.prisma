generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(uuid())
  name        String
  description String
  link        String
  image       String
  createdAt   DateTime  @default(now())
  modifiedAt  DateTime  @updatedAt
  Product     Product[]
}

model Product {
  id          String   @id
  link        String
  name        String
  price       Float
  intro       String
  description String
  mainImageID String
  images      String[]
  promotion   String?
  variants    String[]
  createdAt   DateTime @default(now())
  modifiedAt  DateTime @updatedAt
  categoryID  String
  category    Category @relation(fields: [categoryID], references: [id])
}

model CustomerMessage {
  id        String   @id
  firstName String
  lastName  String
  email     String
  phone     String?
  message   String
  status    String
  createdAt DateTime @default(now())
}

model Order {
  id              String   @id
  shippingAddress String
  orderedProducts String[]
  shippingFee     Float
  taxes           Float
  status          String
  createdAt       DateTime @default(now())
  modifiedAt      DateTime @updatedAt
}

model OrderToSubmit {
  shippingAddress String
  orderedProducts String[]
  status          String
  id              String   @id
}
