model Product {
  id          String    @id
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  String
  link        String
  name        String
  price       Float
  intro       String
  description String
  mainImageID   String
  images      String[]
  promotion   String?
  variants    String[]
  createdAt   DateTime  @default(now())
  modifiedAt  DateTime  @updatedAt
}
